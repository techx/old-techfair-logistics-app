<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techfair.tabletapp"
    android:installLocation="auto"
    android:versionCode="4"
    android:versionName="0.4" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.microphone" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.WAKE_LOCK"/>
	    
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="com.techfair.tabletapp.app.ServerList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.techfair.tabletapp.app.ServerInfo" android:parentActivityName=".app.ServerList"/>
        <activity android:name="com.techfair.tabletapp.app.ChannelActivity" android:launchMode="singleInstance"/>
        <activity android:name="com.techfair.tabletapp.app.Preferences" android:parentActivityName=".app.ServerList"/>

        <service
            android:name="com.techfair.tabletapp.service.MumbleService"
            android:enabled="true" />
        <service
            android:name="com.techfair.tabletapp.service.MumbleNotificationService"
            android:enabled="true" />
    </application>

</manifest>